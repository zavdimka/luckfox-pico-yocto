# USB Gadget support for ACM (serial) and RNDIS (ethernet over USB)

# Basic USB support
CONFIG_USB_SUPPORT=y
CONFIG_USB=y

# Core USB Gadget support
CONFIG_USB_GADGET=y
CONFIG_USB_GADGET_VBUS_DRAW=500
CONFIG_USB_GADGET_STORAGE_NUM_BUFFERS=2

# ConfigFS-based USB Gadget support (required for script-based configuration)
CONFIG_USB_CONFIGFS=y
CONFIG_USB_CONFIGFS_SERIAL=y
CONFIG_USB_CONFIGFS_ACM=y
CONFIG_USB_CONFIGFS_RNDIS=y
CONFIG_USB_CONFIGFS_F_FS=y
CONFIG_USB_CONFIGFS_MASS_STORAGE=y

# USB Gadget functions
CONFIG_USB_LIBCOMPOSITE=y
CONFIG_USB_F_ACM=y
CONFIG_USB_F_SERIAL=y
CONFIG_USB_F_RNDIS=y
CONFIG_USB_F_MASS_STORAGE=y
CONFIG_USB_F_FS=y
CONFIG_USB_U_SERIAL=y
CONFIG_USB_U_ETHER=y

# USB OTG/Dual-Role support
CONFIG_USB_OTG=y
CONFIG_USB_OTG_FSM=y

# DWC2 controller in dual-role mode (RV1106 uses DWC2)
CONFIG_USB_DWC2=y
CONFIG_USB_DWC2_DUAL_ROLE=y
# CONFIG_USB_DWC2_HOST is not set
# CONFIG_USB_DWC2_PERIPHERAL is not set
